<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/graph_loading_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible" />

    <TableLayout
        android:id="@+id/cardview_uppertable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        >

    <TableRow>
        <Switch
            android:id="@+id/switch_big"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:checked="true"/>
        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#a49600"
            android:layout_gravity="center"
            android:padding="10dp"
            android:gravity="center"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#a49600"
            android:text="대근육운동"
            />

        <Switch
            android:id="@+id/switch_small"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:checked="true"/>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="#ff0000"
            android:layout_gravity="center"
            android:padding="10dp"
            android:gravity="center"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textColor="#ff0000"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="소근육운동"
            />
    </TableRow>
        <TableRow>
            <Switch
                android:id="@+id/switch_recog"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:checked="true"/>
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="#ffcc33"
                android:layout_gravity="center"
                android:padding="10dp"
                android:gravity="center"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#ffcc33"
                android:text="인지"
                />

            <Switch
                android:id="@+id/switch_lan"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:checked="true"/>

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="#000000"
                android:layout_gravity="center"
                android:padding="10dp"
                android:gravity="center"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="언어"
                />
        </TableRow>
        <TableRow>
            <Switch
                android:id="@+id/switch_social"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:checked="true"/>
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="#8c0896"
                android:layout_gravity="center"
                android:padding="10dp"
                android:gravity="center"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#FF8C0896"
                android:text="사회성"
                />

            <Switch
                android:id="@+id/switch_self"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:checked="true"/>

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="#898989"
                android:layout_gravity="center"
                android:padding="10dp"
                android:gravity="center"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textColor="#898989"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="자조"
                />
        </TableRow>
        <TableRow android:visibility="gone">
            <Switch
                android:id="@+id/switch_baseline"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:checked="true"/>
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="#5c98ff"
                android:layout_gravity="center"
                android:padding="10dp"
                android:gravity="center"
                />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#5c98ff"
                android:text="심화평가요구 기준선"
                />

            <Switch
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:visibility="gone"
                android:checked="true"/>

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:background="#898989"
                android:layout_gravity="center"
                android:padding="10dp"
                android:visibility="invisible"
                android:gravity="center"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:textColor="#898989"
                android:layout_gravity="center"
                android:gravity="center"
                android:visibility="invisible"
                android:text="자조"
                />
        </TableRow>
    </TableLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:background="#000000"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="발달점수 변화 그래프"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="#b7b7b7"
        android:textSize="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="매주 일요일 23:59PM에 기록됩니다."
        />

    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/chart"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>