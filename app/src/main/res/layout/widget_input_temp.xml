<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_linearlayout"
    android:orientation="vertical"
    android:background="@drawable/card_edge"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/widget_questionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="질문 1."
            android:textColor="#FF0000"
            android:paddingLeft="5dp"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />

        <ImageView
            android:id="@+id/widget_img_question_section"
            android:visibility="visible"
            android:layout_height="20dp"
            android:layout_width="150dp"
            android:scaleType="centerInside"
            android:layout_marginTop="10dp"
            android:src="@drawable/smallmuscle_icon"
            />

        <ImageView
            android:id="@+id/cameraImg"
            android:layout_height="20dp"
            android:layout_width="0dp"
            android:scaleType="centerInside"
            android:layout_weight="2.5"
            android:src="@drawable/camera_on"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3/10"
            android:textColor="#FF0000"
            android:paddingLeft="5dp"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"

            />

    </LinearLayout>

    <TextView
        android:id="@+id/widget_textQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:textSize="10dp"
        android:textColor="#000000"
        android:text="Hello, Widget"/>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:weightSum="4"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/widget_img_question_section0"
            android:visibility="gone"
            android:layout_height="25dp"
            android:layout_width="0dp"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:src="@drawable/smallmuscle_icon"
            />
        <ImageView
            android:id="@+id/widget_img_question_section2"
            android:visibility="gone"
            android:layout_height="25dp"
            android:layout_width="0dp"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:src="@drawable/smallmuscle_icon"
            />
        <ImageView
            android:id="@+id/widget_img_question_section3"
            android:visibility="gone"
            android:layout_height="25dp"
            android:layout_width="0dp"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:src="@drawable/smallmuscle_icon"
            />
        <ImageView
            android:id="@+id/widget_img_question_section4"
            android:layout_height="25dp"
            android:layout_width="0dp"
            android:visibility="gone"
            android:scaleType="centerInside"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_gravity="left"
            android:src="@drawable/smallmuscle_icon"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:textColor="@android:color/black"
        android:visibility="gone"
        android:text="ⓞ전혀 할 수 없다. ①하지 못하는 편이다. ②할 수 있는 편이다. ③잘 할 수 있다."/>


    <TextView
        android:id="@+id/widget_conflictText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="10dp"
        android:padding="10dp"
        android:text="(배우자의 요청 또는 의견차이를 보이는 문제가 있습니다.)"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:weightSum="4"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/widget_button0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:textSize="12dp"
            android:text="0\n(전혀못함)"/>

        <Button
            android:id="@+id/widget_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:textSize="12dp"
            android:text="1\n(못하는편)"/>

        <Button
            android:id="@+id/widget_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:textSize="12dp"
            android:text="2\n(할수있다)"/>

        <Button
            android:id="@+id/widget_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:textSize="12dp"
            android:text="3\n(잘한다)"/>

    </LinearLayout>


</LinearLayout>